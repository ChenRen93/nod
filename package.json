{
  "name": "my-vue-app",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && npm run build:css && vite build",
    "build:css": "postcss src/tailwind.css -o src/index.css",
    "serve": "npm run build && vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "integration:blockchain": "ganache-cli --mnemonic \"indicate swing place chair flight used hammer soon photo region volume shuffle\"",
    "integration:local": "npm run serve",
    "integration:metamask": "npm run integration:wait && npm run integration:transfers",
    "integration:wait": "wait-on -l -i 1000 tcp:8545 http-get://localhost:5000",
    "integration:transfers": "node ./integration/index.mjs",
    "integration:dappeteer": "concurrently -k -s first \"npm:integration:blockchain\" \"npm:integration:local\" \"npm:integration:metamask\"",
    "lint": "eslint . --ext js,ts,tsx",
    "lint:fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "@emotion/css": "^11.1.3",
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@govtechsg/document-store": "^2.2.0",
    "@govtechsg/open-attestation": "^5.2.3",
    "ethers": "^5.1.4",
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/node": "^15.0.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "autoprefixer": "^10.2.5",
    "concurrently": "^6.2.0",
    "cypress": "^7.4.0",
    "dappeteer": "github:rjchow/dappeteer",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "expect-puppeteer": "^5.0.4",
    "ganache-cli": "^6.12.2",
    "husky": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.15",
    "postcss-cli": "^8.3.1",
    "prettier": "2.2.1",
    "puppeteer": "^9.1.1",
    "start-server-and-test": "^1.12.3",
    "tailwindcss": "^2.1.2",
    "typescript": "^4.1.2",
    "vite": "^2.2.3",
    "wait-on": "^5.3.0"
  }
}
